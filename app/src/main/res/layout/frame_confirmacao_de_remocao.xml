<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/view_pergunta_remocao"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:background="@drawable/rounded_corner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textview_confirma_remocao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Deseja mesmo excluir a receita?"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@id/view_pergunta_remocao"
        app:layout_constraintStart_toStartOf="@id/view_pergunta_remocao"
        app:layout_constraintTop_toTopOf="@id/view_pergunta_remocao" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_nega_confirmacao"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/imagebutton_effect"
        android:backgroundTint="@color/lightpink"
        android:text="NEGAR"
        app:layout_constraintBottom_toBottomOf="@id/view_pergunta_remocao"
        app:layout_constraintStart_toStartOf="@id/view_pergunta_remocao" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_aceita_confirmacao"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/imagebutton_effect"
        android:text="CONFIRMAR"
        app:layout_constraintBottom_toBottomOf="@id/view_pergunta_remocao"
        app:layout_constraintEnd_toEndOf="@id/view_pergunta_remocao" />

</androidx.constraintlayout.widget.ConstraintLayout>