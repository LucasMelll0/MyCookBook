<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/yellow"
    >


    <View
        android:id="@+id/view_splash_screen_white"
        android:layout_width="220dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/white"
        app:circularflow_defaultRadius="@dimen/cardview_default_radius"

        android:elevation="@dimen/cardview_default_elevation"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textview_splay_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/view_splash_screen_white"
        app:layout_constraintBottom_toBottomOf="@id/view_splash_screen_white"
        app:layout_constraintStart_toStartOf="@id/view_splash_screen_white"
        app:layout_constraintEnd_toEndOf="@id/view_splash_screen_white"
        android:layout_marginBottom="30dp"
        android:text="Seja Bem Vindo"
        android:textColor="@color/yellow"
        android:textSize="30sp"
        android:elevation="@dimen/cardview_default_elevation"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/progressbar_splash_screen"
        app:layout_constraintBottom_toBottomOf="@id/progressbar_splash_screen"
        app:layout_constraintStart_toStartOf="@id/progressbar_splash_screen"
        app:layout_constraintEnd_toEndOf="@id/progressbar_splash_screen"
        app:srcCompat="@drawable/ic_baseline_local_dining_24"
        android:elevation="@dimen/cardview_default_radius"/>
    <ProgressBar
        android:id="@+id/progressbar_splash_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/textview_splay_screen"
        app:layout_constraintEnd_toEndOf="@id/textview_splay_screen"
        app:layout_constraintTop_toBottomOf="@id/textview_splay_screen"
        android:indeterminate="true"
        android:indeterminateDrawable="@drawable/progress_bar"
        android:progress="20"
        android:elevation="@dimen/cardview_default_elevation"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
